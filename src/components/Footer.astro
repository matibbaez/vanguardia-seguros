<style>
    /* BASE */
    .site-footer {
        /* CAMBIO CLAVE: Usamos tu azul corporativo */
        background-color: var(--primary); 
        
        /* Ajustamos el texto para que sea un blanco suave, no gris pizarra */
        color: rgba(255, 255, 255, 0.8); 
        
        padding: 5rem 0 2rem 0;
        font-size: 0.95rem;
        
        /* Borde superior sutil */
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    /* GRID */
    .footer-grid {
        display: grid;
        grid-template-columns: 1.5fr 1fr 1fr 1.2fr;
        gap: 4rem;
        margin-bottom: 4rem;
        
        /* Línea separadora sutil en blanco transparente */
        border-bottom: 1px solid rgba(255, 255, 255, 0.1); 
        padding-bottom: 3rem;
    }

    /* COLUMNA MARCA */
    .logo-wrapper {
        width: 60px;
        height: 60px;
        margin-bottom: 1.5rem;
        /* El logo inverted=true se verá perfecto sobre el fondo azul */
    }

    .brand-tagline {
        line-height: 1.6;
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
        max-width: 300px;
        color: rgba(255, 255, 255, 0.9); /* Un poco más brillante */
    }

    .matricula-box {
        display: inline-block;
        border: 1px solid rgba(255, 255, 255, 0.2);
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 0.8rem;
        color: white;
        background: rgba(255, 255, 255, 0.05);
    }

    /* COLUMNAS LINKS */
    h4 {
        color: white; /* Blanco puro para títulos */
        font-size: 1.1rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
    }

    ul { list-style: none; padding: 0; }
    
    .footer-col li { margin-bottom: 0.8rem; }

    .footer-col a {
        color: rgba(255, 255, 255, 0.7); /* Blanco con transparencia */
        transition: all 0.2s ease;
        text-decoration: none;
    }

    .footer-col a:hover {
        color: var(--accent); /* Celeste brillante al pasar el mouse */
        padding-left: 5px; /* Pequeño movimiento pro */
    }

    /* CONTACT LIST */
    .contact-list li {
        display: flex;
        gap: 12px;
        align-items: flex-start;
        line-height: 1.5;
        margin-bottom: 1rem;
    }

    .icon-box {
        margin-top: 3px;
        color: var(--accent); /* Iconos en celeste */
        flex-shrink: 0;
    }

    .hover-link:hover {
        color: white;
        text-decoration: underline;
    }

    /* BOTTOM BAR */
    .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
    }
    
    .footer-bottom p {
        color: rgba(255, 255, 255, 0.5); /* Copyright más sutil */
    }

    .social-links {
        display: flex;
        gap: 1rem;
    }

    .social-links a {
        color: white;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px; height: 40px;
        border-radius: 50%;
        background: rgba(255,255,255,0.1); /* Fondo blanco semitransparente */
        border: 1px solid rgba(255,255,255,0.1);
    }

    .social-links a:hover {
        background: var(--accent); /* Fondo Celeste al hover */
        color: var(--primary); /* Icono azul oscuro al hover */
        border-color: var(--accent);
        transform: translateY(-3px);
    }

    /* RESPONSIVE */
    @media (max-width: 900px) {
        .footer-grid {
            grid-template-columns: 1fr;
            gap: 3rem;
            text-align: center;
        }

        .footer-brand, .footer-col {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        
        .brand-tagline { max-width: 100%; }

        .contact-list li {
            justify-content: center;
            text-align: center; /* Alineación central de texto de contacto */
        }

        .footer-bottom {
            flex-direction: column;
            gap: 1.5rem;
            text-align: center;
        }
    }

    /* CONTENEDOR LOGO SSN */
    .ssn-wrapper {
        margin-top: 1.5rem; /* Separación de la matrícula */
        background-color: white; /* Fondo blanco para que el logo se vea bien */
        padding: 10px 15px;
        border-radius: 8px; /* Bordes suaves */
        display: inline-block; /* Que ocupe solo lo necesario */
        box-shadow: 0 4px 6px rgba(0,0,0,0.1); /* Sombrita sutil para despegarlo del fondo */
        transition: transform 0.2s ease;
    }

    .ssn-wrapper:hover {
        transform: translateY(-2px); /* Pequeño efecto al pasar el mouse */
    }

    .ssn-wrapper img {
        display: block;
        height: 35px; /* Altura controlada, ajustala según tu logo */
        width: auto;
        object-fit: contain;
    }

    /* Ajuste Mobile: Centrarlo si colapsa */
    @media (max-width: 900px) {
        .ssn-wrapper {
            margin-top: 2rem;
        }
    }
</style>