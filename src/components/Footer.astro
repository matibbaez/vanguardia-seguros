<style>
    /* BASE */
    .site-footer {
        background-color: var(--primary);
        color: rgba(255, 255, 255, 0.8);
        padding: 5rem 0 2rem 0;
        font-size: 0.95rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    /* GRID */
    .footer-grid {
        display: grid;
        grid-template-columns: 1.5fr 1fr 1fr 1.2fr;
        gap: 4rem;
        margin-bottom: 4rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding-bottom: 3rem;
    }

    .logo-container {
        margin-bottom: 1rem;
        height: auto;
        filter: drop-shadow(0 0 15px rgba(255,255,255,0.1)); 
        animation: pulseLogo 2s infinite cubic-bezier(0.4, 0, 0.6, 1);
    }   

    .footer-logo {
        /* Altura fija y pequeña para que se vea elegante */
        height: 70px; 
        width: auto;
        object-fit: contain;
        display: block;
    }

    .brand-tagline {
        line-height: 1.6;
        font-size: 0.9rem;
        max-width: 300px;
        color: rgba(255, 255, 255, 0.9);
    }

    /* --- BLOQUE LEGAL (Matrícula, SSN, Atención) --- */
    .legal-block {
        display: flex;
        flex-direction: column;
        gap: 1.5rem; /* ESPACIO CLAVE entre elementos */
        align-items: flex-start;
    }

    .matricula-box {
        display: inline-block;
        border: 1px solid rgba(255, 255, 255, 0.2);
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 0.8rem;
        color: white;
        background: rgba(255, 255, 255, 0.05);
    }

    .ssn-wrapper {
        background-color: white;
        padding: 6px 10px;
        border-radius: 6px;
        display: inline-block;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: transform 0.2s ease;
        min-width: 180px; /* Ancho mínimo controlado */
        text-align: center;
    }
    
    .ssn-wrapper:hover { transform: translateY(-2px); }
    
    .ssn-wrapper img { 
        display: block; 
        height: 30px; /* Un pelín más chico que antes (era 48px o 50px) */
        width: auto; 
        object-fit: contain; 
        margin: 0 auto;
    }

    /* Texto de atención al asegurado */
    .atencion-asegurado {
        font-size: 0.85rem;
        line-height: 1.4;
    }
    .atencion-title {
        color: rgba(255, 255, 255, 0.7);
        margin: 0;
        font-weight: 500;
    }
    .atencion-phone {
        color: white;
        font-weight: 700;
        font-size: 1rem;
        margin: 2px 0;
    }
    .ssn-link {
        color: var(--accent);
        text-decoration: none;
        font-size: 0.8rem;
    }
    .ssn-link:hover { text-decoration: underline; }


    /* COLUMNAS LINKS */
    h4 {
        color: white;
        font-size: 1.1rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
    }

    ul { list-style: none; padding: 0; }
    
    .footer-col li { margin-bottom: 0.8rem; }

    .footer-col a {
        color: rgba(255, 255, 255, 0.7);
        transition: all 0.2s ease;
        text-decoration: none;
    }

    .footer-col a:hover {
        color: var(--accent);
        padding-left: 5px;
    }

    /* CONTACT LIST */
    .contact-list li {
        display: flex;
        gap: 12px;
        align-items: flex-start;
        line-height: 1.5;
        margin-bottom: 1rem;
    }

    .icon-box {
        margin-top: 3px;
        color: var(--accent); 
        flex-shrink: 0;
    }

    .hover-link:hover { color: white; text-decoration: underline; }

    /* BOTTOM BAR */
    .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
    }
    
    .footer-bottom p { color: rgba(255, 255, 255, 0.5); }

    .social-links { display: flex; gap: 1rem; }

    .social-links a {
        color: white;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px; height: 40px;
        border-radius: 50%;
        background: rgba(255,255,255,0.1);
        border: 1px solid rgba(255,255,255,0.1);
    }

    .social-links a:hover {
        background: var(--accent);
        color: var(--primary);
        border-color: var(--accent);
        transform: translateY(-3px);
    }

    /* RESPONSIVE */
    @media (max-width: 900px) {
        .footer-grid {
            grid-template-columns: 1fr;
            gap: 3rem;
            text-align: center;
        }

        .footer-brand, .footer-col {
            display: flex; flex-direction: column; align-items: center;
        }
        
        .brand-tagline { max-width: 100%; }

        .legal-block { align-items: center; } /* Centrar en mobile */

        .contact-list li { justify-content: center; text-align: center; }

        .footer-bottom { flex-direction: column; gap: 1.5rem; text-align: center; }
    }
</style>