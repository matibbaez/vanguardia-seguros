<style>
    .legal-section {
        background-color: #f8fafc;
        border-top: 1px solid var(--border);
        padding: 6rem 0;
        position: relative;
        overflow: hidden;
    }

    .legal-layout {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 5rem; /* Aumentado el gap horizontal */
        align-items: center;
    }

    .badge-legal {
        display: inline-block;
        background: #eff6ff; 
        color: var(--primary);
        padding: 6px 16px; 
        border-radius: 50px; 
        font-weight: 700; 
        font-size: 0.8rem;
        margin-bottom: 1rem; 
        text-transform: uppercase; 
        letter-spacing: 1px;
    }

    .legal-features {
        list-style: none;
        padding: 0;
        margin: 3rem 0; /* Más espacio arriba y abajo de la lista */
        display: flex;
        flex-direction: column;
        gap: 2rem; /* Aumentado el espacio entre items (antes 1.5rem) */
    }

    .legal-features li {
        display: flex;
        gap: 1.5rem; /* Más espacio entre icono y texto */
        align-items: flex-start;
    }

    /* Nuevo estilo para los iconos SVG */
    .icon-circle {
        background: white;
        width: 48px; height: 48px; /* Un poco más grandes */
        border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        border: 1px solid var(--border);
        flex-shrink: 0;
        color: var(--accent); /* Naranja */
    }

    .feature-text strong {
        display: block;
        color: var(--text-main);
        font-size: 1.1rem; /* Título un poco más grande */
        margin-bottom: 0.4rem; /* Más aire abajo del título */
        font-weight: 700;
    }
    
    .feature-text p {
        margin: 0;
        font-size: 0.95rem;
        color: var(--text-muted);
        line-height: 1.6;
    }

    .mt-4 { margin-top: 2rem; display: inline-block; }

    /* CARD VISUAL */
    .legal-card {
        background: white;
        border-radius: 24px;
        padding: 2.5rem; /* Más padding interno */
        box-shadow: 0 20px 40px -5px rgba(0,0,0,0.1);
        border: 1px solid var(--border);
        max-width: 450px;
        margin: 0 auto;
        transform: rotate(1deg);
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #f1f5f9;
    }

    .avatar {
        width: 48px; height: 48px;
        background: #f1f5f9;
        border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
    }

    .card-header h4 { margin: 0; font-size: 1rem; font-weight: 700; }
    .status { font-size: 0.8rem; color: #22c55e; font-weight: 600; }

    .message-bubble {
        background: #f1f5f9;
        padding: 1.2rem;
        border-radius: 12px;
        border-bottom-left-radius: 2px;
        margin-bottom: 1.5rem;
        font-size: 0.95rem;
        color: #475569;
        line-height: 1.5;
    }

    .message-bubble.reply {
        background: #eff6ff;
        color: var(--primary);
        border-bottom-left-radius: 12px;
        border-bottom-right-radius: 2px;
        margin-left: 2rem;
    }

    /* --- RESPONSIVE MOBILE --- */
    @media (max-width: 900px) {
        .legal-section {
            padding: 4rem 0;
        }

        .legal-layout { 
            grid-template-columns: 1fr; 
            text-align: center;
            gap: 3rem;
        }

        .legal-features li { 
            flex-direction: column; 
            align-items: center; 
            gap: 0.8rem;
        }

        .legal-features {
            align-items: center;
            gap: 2.5rem; 
        }

        .legal-card { 
            transform: rotate(0); 
            margin-top: 2rem; 
            width: 100%; 
            padding: 1.5rem;
        }
        
        .mt-4 { width: 100%; text-align: center; }
    }
</style>