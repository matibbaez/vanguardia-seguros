---
const links = [
  { name: 'Coberturas', href: '/#coberturas' },
  { name: 'Asesor√≠a Legal', href: '/#asesoria' },
  { name: 'Preguntas Frecuentes', href: '/#faq' },
];
---

<header id="main-header">
  
  <div class="top-bar">
    <div class="container h-full">
      
      <p class="promo-message desktop-msg">
        üî• <strong>¬°Solo por este mes!</strong> 30% OFF asegurando tu Auto + Hogar.
        <a href="#cotizar" class="promo-link">Aprovechar descuento</a>
      </p>

      <p class="promo-message mobile-msg">
        <span class="emoji">üî•</span> 
        <span class="promo-text"><strong>30% OFF</strong> en Auto + Hogar.</span>
        <a href="#cotizar" class="promo-link">Aprovechar descuento</a>
      </p>

    </div>
  </div>

  <div class="nav-wrapper">
    <div class="container flex-between nav-inner">
      
      <a href="#inicio" class="brand-link">
        <img 
          src="/logoVanguardiaNuevo.png" 
          alt="Vanguardia Asesores de Seguros" 
          class="main-logo"
        />
      </a>

      <nav class="desktop-nav">
        <ul class="nav-list">
          {links.map((link) => (
            <li>
              <a href={link.href} class="nav-item">
                {link.name}
                <span class="link-underline"></span>
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <div class="desktop-actions">
        <a href="#cotizar" class="btn-quote">Cotizar Ahora</a>
      </div>

      <button id="menu-toggle" class="mobile-toggle" aria-label="Menu">
        <div class="hamburger-box">
          <span class="line line-top"></span>
          <span class="line line-middle"></span>
          <span class="line line-bottom"></span>
        </div>
      </button>

    </div>
  </div>

  <div id="mobile-menu" class="mobile-overlay">
    <div class="mobile-content">
      <nav class="mobile-links-list">
        {links.map((link, index) => (
          <a href={link.href} class="mobile-link" style={`--delay: ${index * 0.1}s`}>
            {link.name}
          </a>
        ))}
      </nav>
      
      <div class="mobile-actions fade-in-up">
        <a href="#cotizar" class="btn-quote full-width">Cotizar Online</a>
        <a href="#login" class="btn-login full-width" style="text-align:center;">√Årea Clientes</a>
      </div>

      <div class="mobile-footer fade-in-up-delayed">
        <p>¬øTuviste un choque?</p>
        <a href="tel:08005559000" class="emergency-btn">Llamar al 0800-555-9000</a>
      </div>
    </div>
  </div>

</header>

<script>
  document.addEventListener('astro:page-load', () => {

    const header = document.getElementById('main-header');
    const toggleBtn = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const body = document.body;

    if (header && toggleBtn && mobileMenu) {
      window.addEventListener('scroll', () => {
        if (window.scrollY > 20) {
          header.classList.add('is-scrolled');
        } else {
          header.classList.remove('is-scrolled');
        }
      });

      toggleBtn.addEventListener('click', () => {
        const isOpen = header.classList.toggle('menu-open');
        if (isOpen) {
          body.style.overflow = 'hidden';
        } else {
          body.style.overflow = '';
        }
      });

      const links = mobileMenu.querySelectorAll('a');
      links.forEach(link => {
        link.addEventListener('click', () => {
          header.classList.remove('menu-open');
          body.style.overflow = '';
        });
      });
    }
  });
</script>

<style>
  /* --- LAYOUT GENERAL --- */
  #main-header {
    position: fixed;
    top: 0; left: 0;
    width: 100%; z-index: 1000;
    font-family: var(--font-body);
    transition: transform 0.3s ease;
  }

  /* --- 1. TOP BAR (H√çBRIDA) --- */
  .top-bar {
    background: var(--primary); /* Azul oscuro corporativo */
    color: white;
    font-size: 0.95rem;
    position: relative;
    z-index: 1006;
    overflow: hidden;
    transition: all 0.4s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 44px;
  }

  .promo-message {
    margin: 0;
    text-align: center;
    line-height: 1.4;
    padding: 5px 0;
  }

  /* ESTILOS DESKTOP (Como antes) */
  .promo-link {
    color: var(--accent); /* Naranja */
    font-weight: 800;
    margin-left: 8px;
    text-decoration: none;
    transition: color 0.2s;
  }
  .promo-link:hover {
    color: #fff;
    text-decoration: underline;
  }

  /* POR DEFECTO: Ocultamos Mobile, Mostramos Desktop */
  .mobile-msg { display: none; }
  .desktop-msg { display: block; }

  .h-full { height: 100%; width: 100%; display: flex; align-items: center; justify-content: center; }

  /* --- 2. MAIN NAV --- */
  .nav-wrapper {
    background: transparent;
    border-bottom: 1px solid rgba(255,255,255,0.1);
    transition: all 0.4s ease;
    position: relative;
    z-index: 1005;
  }

  /* SCROLL EFFECT */
  #main-header.is-scrolled .nav-wrapper {
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(12px);
    box-shadow: 0 4px 30px rgba(0,0,0,0.05);
    border-bottom: none;
  }
  
  /* ESCONDER TOP BAR AL SCROLLEAR */
  #main-header.is-scrolled .top-bar {
    height: 0;
    min-height: 0;
    opacity: 0;
    padding: 0;
    pointer-events: none;
  }

  .nav-inner {
    height: 90px;
    transition: height 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    padding: 0 1.5rem;
  }
  #main-header.is-scrolled .nav-inner { height: 70px; }

  /* LOGO */
  .brand-link { text-decoration: none; display: flex; align-items: center; height: 100%; }
  .main-logo { height: 60px; width: auto; object-fit: contain; transition: height 0.3s; }
  #main-header.is-scrolled .main-logo { height: 45px; }

  /* NAV DESKTOP */
  .nav-list { display: flex; gap: 2rem; }
  .nav-item { font-weight: 500; color: var(--text-main); position: relative; padding: 5px 0; }
  .nav-item:hover { color: var(--primary); }
  .link-underline { position: absolute; bottom: 0; left: 50%; width: 0; height: 2px; background: var(--accent); transition: 0.3s; transform: translateX(-50%); }
  .nav-item:hover .link-underline { width: 100%; }

  /* ACTIONS */
  .desktop-actions { display: flex; align-items: center; gap: 1rem; }
  .btn-quote {
    background: var(--btn-cta); color: white; padding: 10px 24px; border-radius: 50px;
    font-weight: 700; transition: 0.3s; box-shadow: 0 4px 10px rgba(255, 102, 0, 0.2);
  }
  .btn-quote:hover { transform: translateY(-2px); background: var(--btn-cta-hover); }

  /* MOBILE TOGGLE */
  .mobile-toggle { display: none; background: none; border: none; cursor: pointer; width: 30px; height: 30px; padding: 0; }
  .hamburger-box { width: 26px; height: 20px; position: relative; }
  .line { position: absolute; left: 0; width: 100%; height: 2px; background: var(--primary); border-radius: 4px; transition: 0.4s; }
  .line-top { top: 0; }
  .line-middle { top: 50%; transform: translateY(-50%); }
  .line-bottom { bottom: 0; }
  .menu-open .line-top { top: 50%; transform: translateY(-50%) rotate(45deg); }
  .menu-open .line-middle { opacity: 0; }
  .menu-open .line-bottom { bottom: 50%; transform: translateY(50%) rotate(-45deg); }

  /* MOBILE MENU OVERLAY */
  .mobile-overlay { position: fixed; top: 0; left: 0; width: 100%; height: 100vh; background: white; z-index: 1004; display: flex; flex-direction: column; align-items: center; justify-content: center; opacity: 0; pointer-events: none; transition: 0.3s; }
  .menu-open .mobile-overlay { opacity: 1; pointer-events: all; }
  .mobile-links-list { display: flex; flex-direction: column; gap: 1.5rem; align-items: center; }
  .mobile-link { font-size: 1.8rem; font-weight: 700; color: var(--text-main); opacity: 0; transform: translateY(20px); transition: 0.4s; }
  .menu-open .mobile-link { opacity: 1; transform: translateY(0); transition-delay: var(--delay); }
  .mobile-actions { width: 100%; max-width: 280px; display: flex; flex-direction: column; gap: 1rem; margin-top: 3rem; opacity: 0; transform: translateY(20px); transition: 0.5s; }
  .menu-open .mobile-actions { opacity: 1; transform: translateY(0); }
  .full-width { width: 100%; text-align: center; display: block; }
  .mobile-footer { margin-top: 3rem; text-align: center; opacity: 0; transform: translateY(20px); transition: 0.5s; }
  .menu-open .mobile-footer { opacity: 1; transform: translateY(0); transition-delay: 0.2s; }
  .emergency-btn { color: #ef4444; font-weight: 800; font-size: 1.1rem; display: block; margin-top: 5px; }

  /* --- MEDIA QUERIES --- */
  @media (max-width: 900px) {
    .desktop-nav, .desktop-actions { display: none !important; }
    .mobile-toggle { display: flex; align-items: center; margin-left: auto; }
    
    #main-header { top: 0; padding-top: env(safe-area-inset-top); }
    
    /* CAMBIO DE TEXTO MOBILE */
    .desktop-msg { display: none; } /* Ocultamos el largo */
    .mobile-msg { display: block; } /* Mostramos el corto */

    .top-bar {
        font-size: 0.8rem;
        padding: 0; 
        text-align: center;
        background: linear-gradient(90deg, #0f172a 0%, #1e293b 100%);
    }

    .promo-message {
        padding: 8px 15px;
        width: 100%;
    }

    /* Estilo BOT√ìN P√çLDORA solo para mobile */
    .promo-link-mobile {
        display: inline-block;
        margin-left: 5px;
        margin-top: 3px; 
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 0.75rem;
        text-decoration: none;
        background: rgba(255,255,255,0.15);
        border: 1px solid rgba(255,255,255,0.25);
        color: #fbbf24; 
        font-weight: 700;
        vertical-align: middle;
    }

    /* Ajustes Nav */
    .nav-inner { padding: 0 1.2rem; height: 60px; }
    .main-logo { height: 50px; }
    
    #main-header.is-scrolled { background: rgba(255, 255, 255, 0.98); box-shadow: 0 4px 20px rgba(0,0,0,0.05); }
    #main-header.is-scrolled .nav-wrapper { box-shadow: none; }
  }
</style>