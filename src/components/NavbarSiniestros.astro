</header>

<script>
  // Script IdÃ©ntico al original para mantener la funcionalidad
  const header = document.getElementById('main-header');
  const toggleBtn = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const body = document.body;

  if (header && toggleBtn && mobileMenu) {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 20) {
        header.classList.add('is-scrolled');
      } else {
        header.classList.remove('is-scrolled');
      }
    });

    toggleBtn.addEventListener('click', () => {
      const isOpen = header.classList.toggle('menu-open');
      if (isOpen) {
        body.style.overflow = 'hidden';
      } else {
        body.style.overflow = '';
      }
    });

    const links = mobileMenu.querySelectorAll('a');
    links.forEach(link => {
      link.addEventListener('click', () => {
        header.classList.remove('menu-open');
        body.style.overflow = '';
      });
    });
  }
</script>

<style>
  /* --- ESTILOS BASE (Copiados de Navbar.astro) --- */
  #main-header {
    position: fixed; top: 0; left: 0; width: 100%; z-index: 1000;
    font-family: var(--font-body);
  }

  /* TOP BAR ESPECIAL */
  .top-bar {
    background-color: #ef4444; /* ROJO URGENCIA */
    color: white; height: 40px; font-size: 0.85rem;
    overflow: hidden; transition: margin-top 0.5s cubic-bezier(0.77, 0, 0.175, 1);
    position: relative; z-index: 1006;
  }
  .h-full { height: 100%; display: flex; align-items: center; justify-content: center; }
  .top-center { display: flex; gap: 1rem; font-weight: 600; }
  .phone-link { font-weight: 800; color: white; text-decoration: underline; }

  /* NAV WRAPPER */
  .nav-wrapper {
    background: transparent; border-bottom: 1px solid transparent;
    transition: all 0.4s ease; position: relative; z-index: 1005;
  }
  #main-header.is-scrolled .nav-wrapper {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(16px);
    box-shadow: 0 4px 30px rgba(0,0,0,0.05);
  }
  #main-header.is-scrolled .top-bar { margin-top: -40px; }

  .nav-inner { height: 90px; transition: height 0.4s ease; }
  #main-header.is-scrolled .nav-inner { height: 70px; }

  /* LOGO */
  .logo-box { width: 45px; height: 45px; transition: transform 0.3s ease; }
  .logo-box :global(svg) { width: 100%; height: 100%; object-fit: contain; }
  #main-header.is-scrolled .logo-box { transform: scale(0.9); }
  .brand-link { text-decoration: none; display: flex; align-items: center; gap: 10px; }
  .brand-text { font-size: 1.4rem; font-weight: 800; color: var(--primary); letter-spacing: -0.03em; }

  /* NAV */
  .nav-list { display: flex; gap: 2rem; }
  .nav-item { font-weight: 500; color: var(--text-main); position: relative; padding: 5px 0; }
  .nav-item:hover { color: var(--primary); }
  .link-underline {
    position: absolute; bottom: 0; left: 50%; width: 0; height: 2px;
    background-color: #ef4444; /* Rojo en hover */
    transition: all 0.3s ease; transform: translateX(-50%);
  }
  .nav-item:hover .link-underline { width: 100%; }

  /* BOTONES */
  .desktop-actions { display: flex; align-items: center; gap: 1rem; }
  
  .btn-quote {
    background: var(--primary); color: white; padding: 10px 24px; border-radius: 50px;
    font-weight: 700; transition: all 0.3s ease; box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }
  /* Estilo especial URGENCIA */
  .btn-urgency {
    background-color: #ef4444 !important; /* Rojo */
  }
  .btn-urgency:hover {
    background-color: #dc2626 !important;
    transform: translateY(-2px);
    box-shadow: 0 8px 15px rgba(239, 68, 68, 0.3);
  }

  /* HAMBURGUESA */
  .mobile-toggle { display: none; background: none; border: none; cursor: pointer; width: 30px; height: 30px; }
  .hamburger-box { width: 26px; height: 20px; position: relative; }
  .line { position: absolute; left: 0; width: 100%; height: 2px; background-color: var(--primary); transition: 0.4s; }
  .line-top { top: 0; }
  .line-middle { top: 50%; transform: translateY(-50%); }
  .line-bottom { bottom: 0; }
  
  .menu-open .line-top { top: 50%; transform: translateY(-50%) rotate(45deg); }
  .menu-open .line-middle { opacity: 0; }
  .menu-open .line-bottom { bottom: 50%; transform: translateY(50%) rotate(-45deg); }

  /* MOBILE MENU */
  .mobile-overlay {
    position: fixed; top: 0; left: 0; width: 100%; height: 100vh; background: white; z-index: 1004;
    display: flex; flex-direction: column; align-items: center; justify-content: center;
    opacity: 0; pointer-events: none; transition: opacity 0.3s ease;
  }
  .menu-open .mobile-overlay { opacity: 1; pointer-events: all; }
  
  .mobile-content { width: 100%; display: flex; flex-direction: column; align-items: center; }
  .mobile-links-list { display: flex; flex-direction: column; gap: 1.5rem; align-items: center; }
  
  .mobile-link {
    font-size: 1.8rem; font-weight: 700; color: var(--text-main); opacity: 0; transform: translateY(20px);
    transition: 0.4s ease;
  }
  .menu-open .mobile-link { opacity: 1; transform: translateY(0); transition-delay: var(--delay); }
  
  .mobile-actions { width: 100%; max-width: 280px; display: flex; flex-direction: column; gap: 1rem; margin-top: 3rem; opacity: 0; transform: translateY(20px); transition: 0.5s ease; }
  .menu-open .mobile-actions { opacity: 1; transform: translateY(0); transition-delay: 0.4s; }
  
  .full-width { display: block; text-align: center; }
  .btn-login { font-weight: 600; color: var(--primary); padding: 10px; }

  @media (max-width: 900px) {
    .top-bar, .desktop-nav, .desktop-actions { display: none; }
    .mobile-toggle { display: flex; align-items: center; }
    #main-header.is-scrolled .top-bar { margin-top: 0; }
  }
</style>