<section class="section" id="coberturas" style="background: linear-gradient(to bottom, #ffffff, #f8fafc); position: relative; overflow: hidden;">
    
    <div style="position: absolute; top: 20%; left: -5%; width: 300px; height: 300px; background: var(--primary); opacity: 0.03; filter: blur(80px); border-radius: 50%;"></div>
    <div style="position: absolute; bottom: 10%; right: -5%; width: 400px; height: 400px; background: #10b981; opacity: 0.03; filter: blur(80px); border-radius: 50%;"></div>

    <div class="container" style="position: relative; z-index: 1;">
        
        <div style="text-align: center; max-width: 700px; margin: 0 auto 4rem auto;">
