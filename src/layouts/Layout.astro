---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import NavbarSiniestros from '../components/NavbarSiniestros.astro';
import Footer from '../components/Footer.astro';
import QuoteModal from '../components/QuoteModal.astro';
import WhatsappButton from '../components/WhatsAppButton.astro';
// 1. IMPORTANTE: Importamos el router para transiciones
import { ClientRouter } from 'astro:transitions';

const { title, isSiniestros = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="description" content="Cotiz치 tu seguro online en segundos. Automotor, Hogar y Vida con el respaldo de las mejores compa침칤as. Vanguardia Seguros." />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, viewport-fit=cover" />
    <link rel="icon" type="image/svg+xml" href="/LogoVanguardiaBlanco.png" /> 
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Onest:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <script is:inline src="https://unpkg.com/lenis@1.1.18/dist/lenis.min.js"></script>

    <ClientRouter />

    <style is:global>
        html.lenis, html.lenis body { height: auto; }
        .lenis.lenis-smooth { scroll-behavior: auto !important; }
        .lenis.lenis-stopped { overflow: hidden; }
        html.has-scroll-smooth { overflow: hidden; } 
    </style>

    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://vanguardiaseguros.com.ar" /> 
    <meta property="og:title" content="Vanguardia Seguros | El futuro es seguro" />
    <meta property="og:description" content="Cotiz치 tu seguro de auto u hogar en 2 minutos. Atenci칩n personalizada y respaldo de compa침칤as l칤deres." />
    <meta property="og:image" content="/social-image.jpg" />
</head>
<body>

    <div id="preloader">
        <div class="loader-content">
            <div class="logo-wrapper">
                <img src="/LogoVanguardiaBlanco.png" alt="Cargando..." class="pulsing-logo" />
            </div>
        </div>
    </div>

    {
        isSiniestros ? <NavbarSiniestros /> : <Navbar />
    }

    <main style="padding-top: var(--header-height); min-height: 80vh;">
        <slot />
    </main>

    <Footer />
    <QuoteModal />
    <WhatsappButton />

    <script is:inline>
        // Funci칩n de inicializaci칩n que corre en cada navegaci칩n
        function initPage() {
            
            // --- A. PRELOADER ---
            const preloader = document.getElementById('preloader');
            if (preloader) {
                const hasVisited = sessionStorage.getItem('vanguardia_visited');
                if (!hasVisited) {
                    setTimeout(() => {
                        preloader.style.opacity = '0';
                        setTimeout(() => {
                            preloader.style.display = 'none';
                            sessionStorage.setItem('vanguardia_visited', 'true');
                        }, 500);
                    }, 1500);
                } else {
                    preloader.style.display = 'none';
                }
            }

            // --- B. LENIS (SCROLL SUAVE) ---
            if (typeof Lenis !== 'undefined') {
                // Importante: Destruir instancia anterior si existe para evitar conflictos
                if (window.lenis) window.lenis.destroy();

                window.lenis = new Lenis({
                    duration: 1.2,
                    easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
                    smooth: true,
                });

                function raf(time) {
                    window.lenis.raf(time);
                    requestAnimationFrame(raf);
                }
                requestAnimationFrame(raf);
                
                console.log("Lenis reiniciado 游");
            }

            // --- C. LINKS INTERNOS ---
            document.querySelectorAll('a[href*="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    const href = this.getAttribute('href');
                    const [pathname, hash] = href.split('#');
                    
                    if (!hash) return;

                    const currentPath = window.location.pathname;
                    // L칩gica para saber si es la misma p치gina
                    const isSamePage = pathname === '' || (pathname === '/' && currentPath === '/') || pathname === currentPath;

                    if (isSamePage) {
                        e.preventDefault();
                        const targetElement = document.getElementById(hash);
                        if(targetElement && window.lenis){
                            window.lenis.scrollTo(targetElement, {
                                offset: -80, 
                                duration: 1.5
                            });
                            history.pushState(null, null, '#' + hash);
                        }
                    }
                });
            });
        }

        // Ejecutar en la carga inicial Y en cada transici칩n de p치gina
        document.addEventListener('astro:page-load', initPage);
    </script>
</body>
</html>