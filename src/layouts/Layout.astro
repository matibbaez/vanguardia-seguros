---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import QuoteModal from '../components/QuoteModal.astro';
import WhatsappButton from '../components/WhatsAppButton.astro';
import Logo from '../components/Logo.astro'; 

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="description" content="Cotiz치 tu seguro online en segundos. Automotor, Hogar y Vida con el respaldo de las mejores compa침칤as. Vanguardia Seguros." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/vanguardia.png" /> 
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Onest:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <script is:inline src="https://unpkg.com/lenis@1.1.18/dist/lenis.min.js"></script>

    <style is:global>
        html.lenis, html.lenis body { height: auto; }
        .lenis.lenis-smooth { scroll-behavior: auto !important; }
        .lenis.lenis-stopped { overflow: hidden; }
        html.has-scroll-smooth { overflow: hidden; } 
    </style>

    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://vanguardiaseguros.com.ar" /> 
    <meta property="og:title" content="Vanguardia Seguros | El futuro es seguro" />
    <meta property="og:description" content="Cotiz치 tu seguro de auto u hogar en 2 minutos. Atenci칩n personalizada y respaldo de compa침칤as l칤deres." />
    <meta property="og:image" content="/social-image.jpg" />
</head>
<body>

    <div id="preloader">
        <div class="loader-content">
            <div class="logo-wrapper">
                <Logo class="pulsing-logo" inverted={true} />
            </div>
        </div>
    </div>

    <Navbar />

    <script is:inline>
        window.addEventListener('load', () => {
            const preloader = document.getElementById('preloader');
            if (preloader) {
                // Verificamos si ya visit칩 en esta sesi칩n para no mostrarlo siempre
                const hasVisited = sessionStorage.getItem('vanguardia_visited');

                if (!hasVisited) {
                    setTimeout(() => {
                        preloader.style.opacity = '0';
                        setTimeout(() => {
                            preloader.style.display = 'none';
                            sessionStorage.setItem('vanguardia_visited', 'true');
                        }, 500);
                    }, 1500);
                } else {
                    preloader.style.display = 'none';
                }
            }
        });
    </script>

    <main style="padding-top: var(--header-height); min-height: 80vh;">
        <slot />
    </main>

    <Footer />
    <QuoteModal />
    <WhatsappButton />

    <script is:inline>
        document.addEventListener("DOMContentLoaded", () => {
            if (typeof Lenis !== 'undefined') {
                const lenis = new Lenis({
                    duration: 1.2,
                    easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
                    smooth: true,
                });

                function raf(time) {
                    lenis.raf(time);
                    requestAnimationFrame(raf);
                }
                requestAnimationFrame(raf);

                // L칍GICA INTELIGENTE PARA LINKS
                document.querySelectorAll('a[href*="#"]').forEach(anchor => {
                    anchor.addEventListener('click', function (e) {
                        const href = this.getAttribute('href');
                        // Separamos ruta y hash (ej: /#coberturas -> ["/", "coberturas"])
                        const [pathname, hash] = href.split('#');
                        
                        if (!hash) return; // Si no tiene hash, no hacemos nada

                        // Verificamos si el link apunta a la p치gina actual
                        const currentPath = window.location.pathname;
                        // Es la misma p치gina si el path es vac칤o, es '/' estando en home, o es igual al actual
                        const isSamePage = pathname === '' || (pathname === '/' && currentPath === '/') || pathname === currentPath;

                        if (isSamePage) {
                            // Estamos en la misma p치gina: Scroll suave
                            e.preventDefault();
                            const targetElement = document.getElementById(hash);
                            if(targetElement){
                                lenis.scrollTo(targetElement, {
                                    offset: -80, 
                                    duration: 1.5
                                });
                                // Actualizar URL sin recargar
                                history.pushState(null, null, '#' + hash);
                            }
                        }
                        // Si NO es la misma p치gina, el navegador seguir치 el link normalmente (ej: ir de Siniestros a Home)
                    });
                });

                console.log("Lenis iniciado correctamente 游");
            }
        });
    </script>
</body>
</html>